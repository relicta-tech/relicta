# Base Relicta Configuration Template
# This is a minimal starter template

versioning:
  strategy: "conventional"
  tag_prefix: "v"
  git_sign: {{ .GitSign }}

changelog:
  file: "CHANGELOG.md"
  product_name: "{{ .ProjectName }}"
  {{- if .RepositoryURL }}
  repository_url: "{{ .RepositoryURL }}"
  {{- end }}

{{- if .AIEnabled }}
ai:
  enabled: true
  provider: "{{ .AIProvider }}"
  {{- if .AIModel }}
  model: "{{ .AIModel }}"
  {{- end }}
{{- end }}

